@page
@model Proyectos.App.Presentacion.Pages.Planes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Plan";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Datos del  Plan</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                    <input type="hidden"  asp-for="plan.id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="plan.id"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="plan.id" class="form-control" value = "@Model.plan.id" disabled />
                            </div>
                            <span asp-validation-for="plan.id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="plan.nombre"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="plan.nombre" class="form-control" value = "@Model.plan.nombre" disabled />
                            </div>
                            <span asp-validation-for="plan.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="plan.precio"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="plan.precio" class="form-control" value = "@Model.plan.precio" disabled />
                            </div>
                            <span asp-validation-for="plan.precio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="plan.plan_rut_id"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="plan.plan_rut_id" class="form-control" value = "@Model.plan.plan_rut_id" disabled />
                            </div>
                            <span asp-validation-for="plan.plan_rut_id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="plan.tiempo"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="plan.tiempo" class="form-control" value = "@Model.plan.tiempo" disabled />
                            </div>
                            <span asp-validation-for="plan.tiempo" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Eliminar" class="btn btn-danger form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



