@page
@model Proyectos.App.Presentacion.Pages.Usuarios.EditModel
@{
    ViewData["Title"] = "Actualizar Usuario";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Actualizando Datos del  Usuario</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                    <input type="hidden"  asp-for="usuario.id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.id"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="usuario.id" class="form-control" value = "@Model.usuario.id" />
                            </div>
                            <span asp-validation-for="usuario.id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.identificacion"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.identificacion" class="form-control" value = "@Model.usuario.identificacion"/>
                            </div>
                            <span asp-validation-for="usuario.identificacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.nombre"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="usuario.nombre" class="form-control" value = "@Model.usuario.nombre"/>
                            </div>
                            <span asp-validation-for="usuario.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.apellido"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="usuario.apellido" class="form-control" value = "@Model.usuario.apellido" />
                            </div>
                            <span asp-validation-for="usuario.apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.telefono"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="usuario.telefono" class="form-control" value = "@Model.usuario.apellido"/>
                            </div>
                            <span asp-validation-for="usuario.telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.mail"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input type="email" asp-for="usuario.mail" class="form-control" value = "@Model.usuario.mail" />
                            </div>
                            <span asp-validation-for="usuario.mail" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.edad"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.edad" class="form-control" value = "@Model.usuario.edad" />
                            </div>
                            <span asp-validation-for="usuario.edad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.plan"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.plan" class="form-control" value = "@Model.usuario.plan" />
                            </div>
                            <span asp-validation-for="usuario.plan" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Eliminar" class="btn btn-danger form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




