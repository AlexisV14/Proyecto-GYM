@page
@model Proyectos.App.Presentacion.Pages.Usuarios.CrearModel
@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear un nuevo usuario</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 30px">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.identificacion"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.identificacion" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.identificacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.nombre"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="usuario.nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.apellido"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="usuario.apellido" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.telefono"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="usuario.telefono" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.mail"></label>
                            </div>
                            <div class="col-sm-6">
                                <input type="email" asp-for="usuario.mail" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.mail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.edad"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.edad" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.edad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.plan"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.plan" class="form-control" />
                            </div>
                            <span asp-validation-for="usuario.plan" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Crear" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<head>
  <link rel="stylesheet" href="">
</head>


