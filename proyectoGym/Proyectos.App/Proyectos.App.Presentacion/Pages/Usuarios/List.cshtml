@page
@model Proyectos.App.Presentacion.Pages.Usuarios.ListModel
@{
   //var searchString = Model.searchString; 
   ViewData["Title"] = "Lista de Usuarios";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-6">
                <h2><div class="text-info">Lista de Usuarios</h2>
            </div>
            <div class="col-sm-6">
                 <a class="btn btn-primary btn-sm" asp-page="./Crear">
                        Crear Usuario
                 </a>
            </div>            
        </div>    
    </div>
    <div class="card-body">
        @if (Model.usuarios.Count() > 0) { 
            <br /><br />
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().id)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().identificacion)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().apellido)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().telefono)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().mail)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().edad)</th>
                    <th>@Html.DisplayNameFor(m => m.usuarios.First().plan)</th>
                    <th>ACCIONES</th>
                </tr>
                @foreach (var item in Model.usuarios)  {
                <tr>
                    <td>@Html.DisplayFor(m => item.id)</td>
                    <td>@Html.DisplayFor(m => item.identificacion)</td>
                    <td>@Html.DisplayFor(m => item.nombre)</td>
                    <td>@Html.DisplayFor(m => item.apellido)</td>
                    <td>@Html.DisplayFor(m => item.telefono)</td>
                    <td>@Html.DisplayFor(m => item.mail)</td>
                    <td>@Html.DisplayFor(m => item.edad)</td>
                    <td>@Html.DisplayFor(m => item.plan)</td>
        

                    <td>
                        <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-usuarioId="@item.id">
                            Editar
                        </a>
                    </td> 

                    <td>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-usuarioId="@item.id">
                            Eliminar
                        </a>
                    </td> 
                </tr>    
            }
            </table>
        }else{
            <p>No hay Usuarios disponibles</p>
        }
    </div>
</div>




