@page
@model Proyectos.App.Presentacion.Pages.Rutinas.CrearModel
@{
    ViewData["Title"] = "Agregar Rutina";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear una nueva Rutina</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 30px">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="rutina.id"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="rutina.id" class="form-control" />
                            </div>
                            <span asp-validation-for="rutina.id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="rutina.ejercicios"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="rutina.ejercicios" class="form-control" />
                            </div>
                            <span asp-validation-for="rutina.ejercicios" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="rutina.observaciones"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="rutina.observaciones" class="form-control" />
                            </div>
                            <span asp-validation-for="rutina.observaciones" class="text-danger"></span>
                        </div>
                     <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="rutina.intensidad"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="rutina.intensidad" class="form-control" />
                            </div>
                            <span asp-validation-for="rutina.intensidad" class="text-danger"></span>
                        </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Crear" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

