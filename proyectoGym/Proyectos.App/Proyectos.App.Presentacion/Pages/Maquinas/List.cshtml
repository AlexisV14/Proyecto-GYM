@page
@model Proyectos.App.Presentacion.Pages.Maquinas.ListModel
@{
   //var searchString = Model.searchString; 
   ViewData["Title"] = "Lista de Maquinas";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-6">
                <h2><div class="text-info">Lista de Maquinas</h2>
            </div>
            <div class="col-sm-6">
                 <a class="btn btn-primary btn-sm" asp-page="./Crear">
                        Crear Maquina
                 </a>
            </div>            
        </div>    
    </div>
    <div class="card-body">
        @if (Model.maquinas.Count() > 0) { 
            <br /><br />
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.maquinas.First().id)</th>
                    <th>@Html.DisplayNameFor(m => m.maquinas.First().tipo)</th>
                    <th>@Html.DisplayNameFor(m => m.maquinas.First().pesomin)</th>
                    <th>@Html.DisplayNameFor(m => m.maquinas.First().pesomax)</th>
                    
                    <th>ACCIONES</th>
                </tr>
                @foreach (var item in Model.maquinas)  {
                <tr>
                    <td>@Html.DisplayFor(m => item.id)</td>
                    <td>@Html.DisplayFor(m => item.tipo)</td>
                    <td>@Html.DisplayFor(m => item.pesomin)</td>
                    <td>@Html.DisplayFor(m => item.pesomax)</td>

                    <td>
                        <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-maquinaId="@item.id">
                            Editar
                        </a>
                    </td> 

                    <td>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-maquinaId="@item.id">
                            Eliminar
                        </a>
                    </td> 
                </tr>    
            }
            </table>
        }else{
            <p>No hay Maquinas disponibles</p>
        }
    </div>
</div>




