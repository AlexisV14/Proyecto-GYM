@page
@model Proyectos.App.Presentacion.Pages.Tiempos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Timepo";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Datos Tiempo</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                    <input type="hidden"  asp-for="tiempo.id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tiempo.id"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="tiempo.id" class="form-control" value = "@Model.tiempo.id" disabled />
                            </div>
                            <span asp-validation-for="tiempo.id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="tiempo.duracion"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="tiempo.duracion" class="form-control" value = "@Model.tiempo.duracion" disabled />
                            </div>
                            <span asp-validation-for="tiempo.duracion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Eliminar" class="btn btn-danger form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




