@page
@model Proyectos.App.Presentacion.Pages.Entrenadores.EditModel
@{
    ViewData["Title"] = "Actualizar Entrenador";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Actualizando Datos del  Entrenador</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                    <input type="hidden"  asp-for="entrenador.id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.id"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="entrenador.id" class="form-control" value = "@Model.entrenador.id" />
                            </div>
                            <span asp-validation-for="entrenador.id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.identificacion"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="entrenador.identificacion" class="form-control" value = "@Model.entrenador.identificacion"/>
                            </div>
                            <span asp-validation-for="entrenador.identificacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.nombre"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="entrenador.nombre" class="form-control" value = "@Model.entrenador.nombre"/>
                            </div>
                            <span asp-validation-for="entrenador.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.apellido"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="entrenador.apellido" class="form-control" value = "@Model.entrenador.apellido" />
                            </div>
                            <span asp-validation-for="entrenador.apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.telefono"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="entrenador.telefono" class="form-control" value = "@Model.entrenador.apellido"/>
                            </div>
                            <span asp-validation-for="entrenador.telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.mail"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input type="email" asp-for="entrenador.mail" class="form-control" value = "@Model.entrenador.mail" />
                            </div>
                            <span asp-validation-for="entrenador.mail" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.edad"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="entrenador.edad" class="form-control" value = "@Model.entrenador.edad" />
                            </div>
                            <span asp-validation-for="entrenador.edad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="entrenador.rutid"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="entrenador.rutid" class="form-control" value = "@Model.entrenador.rutid" />
                            </div>
                            <span asp-validation-for="entrenador.rutid" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Eliminar" class="btn btn-danger form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



